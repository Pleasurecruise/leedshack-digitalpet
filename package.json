{
	"name": "leedshack-digitalpet",
	"private": true,
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"scripts": {
		"dev:api": "turbo dev --filter=@my-monorepo/api",
		"dev:tauri": "turbo dev --filter=@my-monorepo/tauri",
		"build:tauri": "turbo build --filter=@my-monorepo/tauri",
		"lint": "turbo lint && manypkg check",
		"lint:fix": "turbo lint:fix",
		"format": "turbo format",
		"format:check": "turbo format -- --check",
		"check-types": "turbo check-types",
		"test": "turbo test",
		"test:coverage": "turbo test:coverage",
		"precommit": "bun run format:check && bun run lint && bun run check-types && bun run test",
		"precommit:fix": "bun run format && bun run lint:fix"
	},
	"devDependencies": {
		"@manypkg/cli": "latest",
		"@vitejs/plugin-vue": "latest",
		"@vitest/coverage-v8": "latest",
		"oxfmt": "latest",
		"oxlint": "latest",
		"rolldown": "latest",
		"turbo": "latest",
		"typescript": "latest",
		"vite": "latest",
		"vitest": "latest",
		"vue": "latest"
	},
	"packageManager": "bun@1.3.8"
}
